@model IEnumerable<Information_System_Of_The_Project_Organization.Models.Employee>

@{
    ViewData["Title"] = "Show Employees";
}

<h1>Show Employees</h1>

<form asp-action="GetEmployeeDataByParams" asp-controller="Employees" method="get">
    <div>
        <label for="category">Category:</label>
        <input type="text" id="category" name="category" />
    </div>
    <div>
        <label for="department">Department:</label>
        <input type="text" id="department" name="department" />
    </div>
    <button type="submit">Show Employees</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                First Name
            </th>
            <th>
                Middle Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Age
            </th>
            <th>
                Education
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MiddleName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Education)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>